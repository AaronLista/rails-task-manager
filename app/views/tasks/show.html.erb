<div class="container">
  <h1>show</h1>
  <div class="card text-center">
    <div class="card-header d">
      <%= @task.title %>
      <%= link_to "edit", edit_task_path(@task) %>
      <%= link_to "delete", destroy_task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </div>
    <div class="card-body">
      <p>
        <%= @task.details %>
      </p>
    </div>
    <% if @task.completed %>
      <div class="card-footer bg-success">
        <p class="text-white">completed</p>
      </div>
    <% else %>
      <div class="card-footer">
        <p class="text-secondary">uncompleted</p>
      </div>
    <% end %>
  </div>

  <%= link_to "tasks", tasks_path %>
</div>
